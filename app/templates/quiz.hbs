<h4 class="center-align">Configure</h4>
<div>
    <div class="divider"></div>
    <p>
        <label for="trivia_difficulty">Select Difficulty: </label>
        <Select id="trivia_difficulty" @placeholder="Any Difficulty" @values={{@model.difficulties}}
            {{on "change" this.updateDifficulty}} />
    </p>
    <p>
        <label for="trivia_category">Select Category: </label>
        <Select id="trivia_category" @placeholder="Any Category" @values={{@model.categories}}
            {{on "change" this.updateCategory}} />
    </p>
    <div class="divider"></div>
    <br>
    <LinkTo type="button" class="waves-effect waves-light btn" @route="quiz">
        <i class="material-icons">refresh</i>
    </LinkTo>
    <LinkTo type="button" class="waves-effect waves-light btn" disabled={{this.service.inProgress}}
        @route="quiz.playing" @query={{hash difficulty=this.difficulty category=this.category}}>
        <b>start</b>
    </LinkTo>
</div>
<div>
    {{outlet}}
</div>